<p id="notice"><%= notice %></p>

<h1>Listing Brokers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Broker name</th>
      <th>Broker details</th>
      <th>Locations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brokers.each do |broker| %>
      <tr>
        <td><%= broker.broker_name %></td>
        <td><%= broker.broker_details %></td>
        <td><%= broker.locations %></td>
        <td><%= link_to 'Show', broker %></td>
        <td><%= link_to 'Edit', edit_broker_path(broker) %></td>
        <td><%= link_to 'Destroy', broker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

